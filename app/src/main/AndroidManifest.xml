<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studymanageroficial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_studymanager"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_studymanager_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".viewTarefa.TarefaDetalhada"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewlogin.CadastroLogin"/>

        <activity android:name=".viewTarefa.CadastroTarefa"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewlogin.CadastroLogin"/>

        <activity android:name=".viewlogin.CadastroLogin"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewlogin.LoginView"/>

        <activity android:name=".viewlogin.LoginView"
            android:screenOrientation="portrait"/>

        <activity android:name=".viewDisciplina.DisciplinaDetalhada"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewlogin.CadastroLogin"/>

        <activity android:name=".viewDisciplina.CadastroDisciplina"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewlogin.CadastroLogin"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>