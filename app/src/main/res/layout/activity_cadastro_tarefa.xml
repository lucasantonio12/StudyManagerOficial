<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_cadastro_tarefa"
    tools:context=".viewTarefa.CadastroTarefa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Disciplinas"
            android:textSize="18sp"
            app:fontFamily="sans-serif" />

        <Spinner
            android:id="@+id/disciplinasSipnner"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/addDisciplinas"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="+" />

    </LinearLayout>


    <EditText
        android:id="@+id/tarefaTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="25"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="25"
        android:hint="Descricao"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="25"
        android:text="Prioridade"
        android:textSize="18sp"
        app:fontFamily="sans-serif-condensed" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <RadioButton
            android:id="@+id/baixaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baixa" />

        <RadioButton
            android:id="@+id/mediaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Media" />

        <RadioButton
            android:id="@+id/altaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alta" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelarTarefa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="#2D356B"
            android:textColorHighlight="#9486AD"
            android:textColorLink="#3F51B5"
            android:text="Cancelar"
             />

        <Button
            android:id="@+id/cadastraTarefa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#2D356B"
            android:text="salvar"
            android:textColorHighlight="#9486AD"
            android:textColorLink="#3F51B5"
            android:visibility="visible" />


       </LinearLayout>



</LinearLayout>